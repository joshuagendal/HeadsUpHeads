	<div class="container content">
        <div class="new-thread">
            <a style="color: white;"href="events/new-event">Click here to post a new event</a>
        </div>    
        <div class="table-holder">
            <div class="table-responsive messageboard">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Sponsor</th>
                            <th>Created</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% events.forEach(function(event){ %>
                    <tr>
                        <td class="row-title"><%= event.eventTitle %></td>
                        <td class="row-author"><%= event.userThatAddedEvent.username %></td>
                        <td class="row-posts"><%= event.created %></td> <!-- @TODO: MAKE FUNCTION/LINE OF CODE FOR TOTAL POSTS -->
                        <td class="row-timeStamp"><%= event.eventDescription %></td>
                        <% }) %>  
                    </tr>

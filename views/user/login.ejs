<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/header %>
</head>    

<body>

    <% include ../partials/nav %>

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Heads Up Heads</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse nav-font-size">
            <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li><a href="/message-board">Mesage Board</a></li>
                <li><a href="/events">Events</a></li>
                <li class="active"><a href="/login">Login</a></li>
                <li><a href="/signup">Signup</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
            </div>
        </div>
    </nav>

      <% if(loginValidationHasErrs) { %>
            <% for(var i=0; i < loginValidationErrs.length; i++) {%>
                <h1 class="alert alert-danger margin-top-fifty" role="alert"><%= loginValidationErrs[i] %></h1>  <!-- when adding the equal sign to these tags, able to call                     a variable that is passed from backend -->
            <% } %> 
      <% } %>   
 
    
      <% if(loginPostReqHasErrs) { %>
          <% for(var i=0; i < loginPostReqErrs.length; i++) { %>
              <h1 class="alert alert-danger margin-top-fifty" role="alert"><%= loginPostReqErrs[i] %></h1>  
          <% } %>  
      <% } %>



    <div class="container text-center margin-bottom-fifty margin-top-fifty">
      <div class="row">
        <div class="col-md-3"></div>    
            <div class="col-md-6">
                <h1 class="login-header">LOGIN</h1>
            </div> 
        <div class="col-md-3"></div>    
        </div> 
    </div>

    <div class="container">
      <div class="row">  
        <div class="col-md-3"></div>
            <div class="col-md-6">  
                <form method="POST" action="/login">
                    <div class="form-group col-xs-12">
                        <input id="email" class="form-control" name="email" type="text" autocomplete="on" placeholder="EMAIL" style="margin-bottom:20px;">
                    </div>

                    <div class="form-group col-xs-12">
                        <input id="password" class="form-control" name="password" type="password" placeholder="PASSWORD" style="margin-bottom:20px;">
                    </div>


                    <div class="form-group col-xs-12">
                        <input type="submit" id="login" value="LOGIN" class="form-control btn btn-primary" name="login" style="">
                    </div>
                </form>
            </div>  
        <div class="col-md-3"></div>       
      </div> 
    </div>      



<% include ../partials/footer %>
</body>
</html>
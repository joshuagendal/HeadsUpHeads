    <% include ../partials/nav %>

      <% if(loginValidationHasErrs) { %>
        <div class="row margin-top-seventy-five">
            <% for(var i=0; i < loginValidationErrs.length; i++) {%>
              <div class="alert alert-danger text-center">
                <span class="error-text" role="alert"><%= loginValidationErrs[i] %></span>  <!-- when adding the equal sign to these tags, able to call                     a variable that is passed from backend -->
              </div>  
            <% } %> 
        </div>    
      <% } %>   
 

      <% if(loginPostReqHasErrs) { %>
        <div class="row margin-top-seventy-five">
          <% for(var i=0; i < loginPostReqErrs.length; i++) { %>
            <div class="alert alert-danger text-center">
              <span class="error-text" role="alert"><%= loginPostReqErrs[i] %></span> 
            </div>   
          <% } %>  
        </div>  
      <% } %>



    <div class="container text-center margin-bottom-fifty">
      <div class="row"> 
        <div class="col-md-6 col-centered">
            <h1 class="login-header">LOGIN</h1>
        </div> 
      </div> 
    </div>

    <div class="container">
      <div class="row">  
        <div class="col-md-6 col-centered">  
            <form method="POST" action="/login">
                <div class="form-group col-xs-12">
                    <input id="email" class="form-control" name="email" type="text" autocomplete="on" placeholder="EMAIL" style="margin-bottom:20px;">
                </div>

                <div class="form-group col-xs-12">
                    <input id="password" class="form-control" name="password" type="password" placeholder="PASSWORD" style="margin-bottom:20px;">
                </div>


                <div class="form-group col-xs-12">
                    <input type="submit" id="login" value="LOGIN" class="form-control btn btn-primary" name="login" style="">
                </div>
            </form>
        </div>      
      </div> 
    </div>      



<% include ../partials/footer %>
</body>
</html>